<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/base_bg">

    <RadioGroup
        android:id="@+id/sticker_group_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/sticker_group_tab_theme"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/base_bg"
            android:button="@null"
            android:gravity="center"
            android:text="主题贴纸"
            android:textColor="@color/ticker_group_tab_text"
            android:textSize="12sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/sticker_group_tab_hot"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/base_bg"
            android:button="@null"
            android:gravity="center"
            android:text="热门贴纸"
            android:textColor="@color/ticker_group_tab_text"
            android:textSize="12sp" />
    </RadioGroup>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <GridView android:id="@+id/sticker_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_gravity="center"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:visibility="visible"/>

        <GridView android:id="@+id/sticker_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_gravity="center"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>
