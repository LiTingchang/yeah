<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <com.yeah.android.view.CommonTitleBar
        android:id="@+id/title_layout"
        style="@style/head_default"
        app:bgColor="@color/app_base"
        app:leftBtnIcon="@drawable/back"
        app:titleTxt="意见反馈" />

    <EditText android:id="@+id/feedback_content"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:maxLines="6"
        android:maxEms="450"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="top"
        android:hint="请输入您的反馈内容"/>

    <TextView
        android:id="@+id/feedback_btn"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/base_btn_bg"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="发送反馈"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_xl" />


</LinearLayout>