<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <com.yeah.android.view.CommonTitleBar
        android:id="@+id/title_layout"
        style="@style/head_default"
        app:leftBtnIcon="@drawable/ic_back_black"
        app:rightBtnTxt="@string/next_step"
        app:bgColor="@color/transparent"
        app:titleTxt="编辑照片" />

    <LinearLayout
        android:id="@+id/main_area"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/drawing_view_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <jp.co.cyberagent.android.gpuimage.GPUImageView
                android:id="@+id/gpuimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </RelativeLayout>


    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <LinearLayout
            android:id="@+id/sticker_list_area"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/sticker_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/common_background"
                android:gravity="center_vertical"
                android:overScrollMode="always"
                app:hlv_dividerWidth="@dimen/margin_15px"/>

            <TextView
                android:id="@+id/sticker_add_more"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="0dp"
                android:lineSpacingExtra="0dp"
                android:background="@color/app_base"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout android:id="@+id/sticker_group_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/base_bg">

            <RadioGroup
                android:id="@+id/sticker_group_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/sticker_group_tab_theme"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/base_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="主题贴纸"
                    android:textColor="@color/ticker_group_tab_text"
                    android:textSize="12sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/sticker_group_tab_hot"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/base_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="热门贴纸"
                    android:textColor="@color/ticker_group_tab_text"
                    android:textSize="12sp" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <GridView android:id="@+id/sticker_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:layout_gravity="center"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:visibility="visible"/>

                <GridView android:id="@+id/sticker_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:layout_gravity="center"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>



</LinearLayout>