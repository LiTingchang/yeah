<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical">


    <com.yeah.android.view.CommonTitleBar
        android:id="@+id/title_layout"
        style="@style/head_default"
        app:bgColor="@color/transparent"
        app:leftBtnIcon="@drawable/back"
        app:titleTxt="登录" />

    <View style="@style/line_horizontal_style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/login_input_name_root"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/login_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_login_phone" />

                    <EditText
                        android:id="@+id/login_input_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:phoneNumber="true"
                        android:gravity="center_vertical"
                        android:background="@color/transparent"
                        android:hint="请输入手机号"
                        android:paddingLeft="7dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/login_input_password_root"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@id/login_input_name_root"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_login_password" />

                    <EditText
                        android:id="@+id/login_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/transparent"
                        android:hint="请输入您的密码"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:paddingLeft="7dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/login_btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@id/login_input_password_root"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_btn_bg"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/login_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/login_btn_login"
                    android:layout_marginTop="13dp"
                    android:text="@string/login_forget_password"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>